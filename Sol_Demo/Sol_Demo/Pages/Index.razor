@page "/"

@inject NavigationManager _navigationManger

@code{

    public async Task CallDemoWithoutParamater()
    {
        string url = String.Empty;
        await Task.Run(() =>
        {

            url = "/demo/demo1";

            _navigationManger.NavigateTo(url);

        });
    }

    public async Task CallDemoWithParamater()
    {
        string url = String.Empty;
        int id = 11;

        await Task.Run(() =>
        {

            url = $"/demo/demo1/{id}";

            _navigationManger.NavigateTo(url);

        });
    }

}

<h1>Hello, world!</h1>

Welcome to your new app.

<div class="container">
    <div class="row">
        <div class="col-10">
            <button class="btn btn-primary" @onclick="CallDemoWithoutParamater">Call Demo Without Parameter</button>
        </div>
    </div>
    <div class="row">
        <div class="col-10">
            <button class="btn btn-primary" @onclick="CallDemoWithParamater">Call Demo With Parameter</button>
        </div>
    </div>
</div>